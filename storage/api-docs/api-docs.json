                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nomU",
                                    "prenomU",
                                    "emailU",
                                    "mdpU"
                                ],
                                "properties": {
                                    "nomU": {
                                        "type": "string",
                                        "example": "Doe"
                                    },
                                    "prenomU": {
                                        "type": "string",
                                        "example": "John"
                                    },
                                    "emailU": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "mdpU": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
